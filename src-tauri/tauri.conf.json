{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pomodoro Timer",
  "version": "0.1.0",
  "identifier": "com.pomowidget.timer",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "",
        "width": 300,
        "height": 300,
        "minWidth": 300,
        "minHeight": 220,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": true,
        "titleBarStyle": "Overlay",
        "backgroundColor": "#00000000",
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}